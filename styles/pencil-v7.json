{
  "version": 7,
  "name": "Pencil",
  "constants": {
    "@land": "rgba(0,0,0,0)",
    "@water": "#73b6e6",
    "@park": "#c8df9f",
    "@road": "#fefefe",
    "@border": "#6d90ab",
    "@wood": "#33AA66",
    "@building": "#d9ccbe",
    "@building_outline": "#d2c6b9",
    "@text": "#000000",
    "@satellite_brightness_low": 0,
    "@satellite_brightness_high": 1,
    "@satellite_saturation": 2,
    "@satellite_spin": 0
  },
  "sources": {
    "mapbox": {
      "type": "vector",
      "url": "mapbox://mapbox.mapbox-streets-v6-dev",
      "maxzoom": 15
    }
  },
  "sprite": "https://www.mapbox.com/mapbox-gl-styles/sprites/pencil",
  "glyphs": "mapbox://fontstack/{fontstack}/{range}.pbf",
  "layers": [{
    "id": "background",
    "type": "background",
    "paint": {
      "background-image": "natural_paper"
    }
  }, {
    "id": "park",
    "type": "fill",
    "source": "mapbox",
    "source-layer": "landuse",
    "filter": ["==", "class", "park"],
    "paint": {
      "fill-image": "shade_light",
      "fill-antialias": true
    }
  }, {
    "id": "park_outline",
    "type": "line",
    "source": "mapbox",
    "source-layer": "landuse",
    "filter": ["all", ["==", "class", "park"], ["==", "$type", "Polygon"]],
    "minzoom": 12,
    "paint": {
      "line-image": "line_shade_22_1",
      "line-width": {
        "base": 1.3,
        "stops": [[12, 1], [20, 11]]
      },
      "line-opacity": 0.2
    }
  }, {
    "id": "wood",
    "type": "fill",
    "source": "mapbox",
    "source-layer": "landuse",
    "filter": ["==", "class", "wood"],
    "paint": {
      "fill-color": "@wood",
      "fill-opacity": 0.08,
      "fill-antialias": true
    }
  }, {
    "id": "water",
    "type": "fill",
    "source": "mapbox",
    "source-layer": "water",
    "paint": {
      "fill-color": "@water",
      "fill-image": "shade_medium",
      "fill-antialias": true
    }
  }, {
    "id": "road_large_casing",
    "type": "line",
    "source": "mapbox",
    "source-layer": "road",
    "filter": ["in", "class", "motorway", "main"],
    "layout": {
      "line-cap": "butt",
      "line-join": "bevel"
    },
    "paint": {
      "line-image": "line_double_20",
      "line-color": "rgba(152,152,152,1)",
      "line-width": {
        "stops": [[11, 1], [15, 10]]
        },
      "line-opacity": {
        "stops": [[13.5, 0], [14.5, 1]]
      }
    }
  }, {
    "id": "road_regular_casing",
    "type": "line",
    "source": "mapbox",
    "source-layer": "road",
    "filter": ["in", "class", "street"],
    "layout": {
      "line-cap": "butt",
      "line-join": "bevel"
    },
    "paint": {
      "line-image": "line_double_18",
      "line-opacity": {
        "stops": [[13.5, 0], [14.5, 1]]
      },
      "line-width": {
        "stops": [[13, 1], [15.5, 9]]
      }
    }
  }, {
    "id": "road_limited",
    "type": "line",
    "source": "mapbox",
    "source-layer": "road",
    "filter": ["in", "class", "street_limited"],
    "layout": {
      "line-cap": "round",
      "line-join": "bevel",
      "line-round-limit": 0.7
    },
    "paint": {
      "line-dasharray": [0.4, 1.3],
      "line-color": "@road",
      "line-image": "line_solid_7",
      "line-opacity": 0.7,
      "line-width": {
        "stops": [[12, 1], [14.5, 4]]
      }
    }
  }, {
    "id": "road_large",
    "ref": "road_large_casing",
    "paint": {
      "line-image": "line_double_20_mask",
      "line-width": {
        "stops": [[11, 1], [15, 10]]
      }
    }
  }, {
    "id": "road_regular",
    "ref": "road_regular_casing",
    "paint": {
      "line-image": "line_double_18_mask",
      "line-color": "@road",
      "line-width": {
        "stops": [[13, 1], [15.5, 9]]
      }
    }
  }, {
    "id": "path",
    "type": "line",
    "source": "mapbox",
    "source-layer": "road",
    "filter": ["in", "class", "path"],
    "layout": {
      "line-cap": "round",
      "line-join": "bevel"
    },
    "paint": {
      "line-image": "line_dotted_8",
      "line-opacity": 0.7,
      "line-width": 4
    }
  }, {
    "id": "bridge_large_casing",
    "type": "line",
    "source": "mapbox",
    "source-layer": "bridge",
    "filter": ["in", "class", "motorway", "main"],
    "paint": {
      "line-image": "line_double_20",
      "line-width": {
        "stops": [[11, 1], [15, 10]]
      },
      "line-opacity": {
        "stops": [[12, 0], [13, 1]]
      }
    }
  }, {
    "id": "bridge_regular_casing",
    "type": "line",
    "source": "mapbox",
    "source-layer": "bridge",
    "filter": ["in", "class", "street", "street_limited"],
    "paint": {
      "line-image": "line_double_18",
      "line-opacity": {
        "stops": [[13.5, 0], [14.5, 1]]
      },
      "line-width": {
        "stops": [[12, 1], [14.5, 9]]
      }
    }  
  }, {
    "id": "bridge_large",
    "ref": "bridge_large_casing",
    "paint": {
      "line-color": "@road",
      "line-image": "line_double_20_mask",
      "line-width": {
        "stops": [[11, 1], [15, 10]]
      }
    }
  }, {
    "id": "bridge_regular",
    "ref": "bridge_regular_casing",
    "paint": {
      "line-image": "line_double_18_mask",
      "line-color": "@road",
      "line-width": {
        "stops": [[13, 1], [15.5, 9]]
      }
    }
  }, {
    "id": "building",
    "type": "fill",
    "source": "mapbox",
    "source-layer": "building",
    "minzoom": 14,
    "paint": {
      "fill-color": "@building",
      "fill-antialias": true,
      "fill-image": "shade_medium",
      "fill-opacity": {
        "base": 1.01,
        "stops": [[12, 0], [13, 1]]
      }
    }
  }, {
    "id": "building_outline",
    "type": "line",
    "source": "mapbox",
    "source-layer": "building",
    "minzoom": 14,
    "layout": {
      "line-cap": "butt",
      "line-join": "bevel"
    },
    "paint": {
      "line-opacity": 0.05,
      "line-image": "line_solid_7",
      "line-width": {
        "base": 1.3,
        "stops": [[14, 1], [20, 4]]
      }
    }
  }, {
    "id": "borders",
    "type": "line",
    "source": "mapbox",
    "source-layer": "admin",
    "paint": {
      "line-color": "rgba(0,0,0,0.3)",
      "line-width": 1
    }
  }]
}
